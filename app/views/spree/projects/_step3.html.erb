<div class="form-group">
  <% if u %>
    <%= select_tag :contract_type, options_for_select([['Rate Type','placeholder',{disabled: 'disabled'}],['FLAT RATE','flat_rate',{class: 'option-color'}],['HOURLY RATE','hourly_rate',{class: 'option-color'}]],@project.rate_type), :class => 'form-control text-center',disabled: 'disabled'%>
  <% else %>
    <%= select_tag :contract_type, options_for_select([]),disabled: 'disabled', :class => 'form-control text-center'%>
  <% end %>
  <div class="info"></div>
</div>

<div class="form-group">
  <%= f.select :charge, options_for_select([['Would you like to charge a percentage of the product order total ?','placeholder',{disabled: 'disabled'}],['YES','true',{class: 'option-color'}],['NO','false',{class: 'option-color'}]],@project.charge || 'placeholder'),{}, :class => "form-control text-center #{u ? '' : 'select-placeholder'}"%>
  <div class="info"></div>
</div>

<div class="form-group" style="<%= u ? '' : 'display: none;' %>">
  <%= f.select :charge_on, options_for_select([['Charge Percentage:','placeholder',{disabled: 'disabled'}],['On all products purchased reladed to contract work,<br> whether they are included in your designs or not'.html_safe,'all_products',{class: 'option-color'}],['Only if customer buys alternate products outside of contract terms<br> that are not included in your designs'.html_safe,'alternate',{class: 'option-color'}]],@project.charge_on || 'placeholder'),{}, :class => "form-control text-center #{u ? '' : 'select-placeholder'}" %>
  <div class="info"></div>
</div>

<div class="form-group" style="<%= u ? '' : 'display: none;' %>">
  <%= f.select :charge_percentage, options_for_select([['Choose percentage to charge:','placeholder',{disabled: 'disabled'}],['5%','5',{class: 'option-color'}],['10%','10',{class: 'option-color'}],['15%','15',{class: 'option-color'}],['20%','20',{class: 'option-color'}],['25%','25',{class: 'option-color'}]],@project.charge_percentage || 'placeholder'),{}, :class => "form-control text-center #{u ? '' : 'select-placeholder'}" %>
  <div class="info"></div>
</div>