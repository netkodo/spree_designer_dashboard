<div class="project-history text-center">
  <h3>PROJECT HISTORY</h3>
  <div class="row project-history-header">
    <div class="col-md-4 col-sm-4 col-xs-4">
      SUBJECT
    </div>
    <div class="col-md-5 col-sm-3 col-xs-3">
      DATE
    </div>
    <div class="col-md-3 col-sm-5 col-xs-5">
      ATTACHMENT
    </div>
  </div>
  <div class="project-history-group">
    <% if @project_history.present? %>
      <% @project_history.each do |ph| %>
          <%= render partial: 'project_history_item', locals: {ph: ph} %>
      <% end %>
    <% end %>
  </div>
</div>