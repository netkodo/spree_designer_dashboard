<div id="upgrade-modal" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">

            <%= form_for(spree_current_user.designer_registrations.first, html: {id: 'upgrade_to_room_all_access'}) do |f| %>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <%= f.label :tin, "TIN/SSN" %>
                      <%= f.text_field :tin, :class => 'form-control' %>
                      <%= f.error_message_on :tin %>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <%#= f.label :applied_for, "Upgrade for" %>
                      <%= text_field_tag :applied_for, "room all access", name: "designer_registration[applied_for]", :class => 'form-control hidden', readonly: true %>
                      <%#= f.error_message_on :applied_for %>
                    </div>
                  </div>
                </div>
                <%# Spree::PaymentMethod.where(active: true, environment: Rails.env, display_on: ['frontend','']).limit(1).each do |method| %>
                    <!--<fieldset class="text-center">-->
                      <%#= render :partial => "spree/checkout/payment/#{method.method_type}", :locals => {:payment_method => method} %>
                    <!--</fieldset>-->
                <%# end %>
                <div class="actions">
                  <%= f.submit "Upgrade", :class => "btn btn-primary disabled" %>
                </div>
            <% end %>

          </div>
        </div>
      </div>


    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
