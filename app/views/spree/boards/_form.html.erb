<fieldset class="form-horizontal">
	<div class="form-group">
	    <%= f.label :name, :class => "col-sm-2 control-label" %>
	    <div class="col-sm-10">
			<%= f.text_field :name, :class => 'form-control', :"required" => "" %>
			<%= f.error_message_on :name %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label @board.private ? :customer_notes : :description, :class => "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description, {:class => 'form-control', :rows => 5, :"required" => ""} %>
			<%= f.error_message_on :description %>
		</div>
	</div>
  <% if !@board.private %>
    <div class="form-group">
      <%= f.label :room_id, "Room Type", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :room_id, @room_taxons, :id, :name, {:include_blank => true}, {:class => 'form-control', :style => "", :"required" => ""} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :style_id, "Style", :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.collection_select :style_id, @style_taxons, :id, :name, {:include_blank => true}, {:class => 'form-control', :style => "", :"required" => ""} %>
      </div>
    </div>
  <% else %>
      <div class="form-group">
        <div class="col-md-12"><%= label :customer, "Customer" %></div>

        <div class="col-md-3">
        <%= f.label :customer_address,"Address", :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :customer_address, :class => 'form-control', :"required" => "" %>
          <%= f.error_message_on :customer_address %>
        </div>
        </div>

        <div class="col-md-3">
          <%= f.label :customer_city,"City", :class => "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :customer_city, :class => 'form-control', :"required" => "" %>
            <%= f.error_message_on :customer_city %>
          </div>
        </div>

        <div class="col-md-3">
        <%= f.label :state_id,"State", :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%#= f.text_field :state_id, :class => 'form-control', :"required" => "" %>
          <%= f.collection_select :state_id, Spree::State.order(name: :asc), :id, :name, {value: 49}, {:class => 'required form-control'}  %>
          <%= f.error_message_on :state_id %>
        </div>
        </div>

        <div class="col-md-3">
        <%= f.label :customer_zipcode,"Zipcode", :class => "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :customer_zipcode, :class => 'form-control', :"required" => "" %>
          <%= f.error_message_on :customer_zipcode %>
        </div>
        </div>

      </div>
  <% end %>
  <%= check_box_tag :is_assigned_to_portfolio,"",false, class: "hidden" %>

</fieldset>