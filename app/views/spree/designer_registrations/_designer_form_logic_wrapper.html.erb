<% if spree_current_user %>
  <% if spree_current_user.designer_registrations.present? && spree_current_user.designer_registrations.first.id.present? %>
    <% d = spree_current_user.designer_registrations.first %>
    <% if !d.access_paid %>
      <% if d.status == 'pending' %>
        Your application is pending
      <% elsif d.status == 'room designer' %>
        <%= render :partial => 'payment_form' %>
      <% elsif d.status == 'to the trade designer' %>
        <%= render partial: 'form_tin' %>
      <% elsif d.status == 'all access' %>
        <%= render partial: 'form_tin' %>
      <% elsif d.status == 'room all accesss' %>
        You already have all privileges
      <% end %>
    <% end %>
  <% else %>
    <h4>Step 2 of 2: Complete designer application</h4>
    <%= render :partial => "form" %>
  <% end %>
<% else %>
  <h4>Step 1 of 2: Create your All-Access Account</h4>
  <p>Please enter the information below to create your account.</p>
  <%= render :partial => "login_form" %>
<% end %>